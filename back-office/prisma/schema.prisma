generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql" // Sesuaikan dengan database yang Anda gunakan
  url      = env("DATABASE_URL")
}

enum PlanStatus {
  Draft
  Active
  NonActive
}

enum BlogStatus {
  Published
  Takedown
  Draft
}

enum PlanType {
  Standard
  Premium
}

enum Currency {
  IDR
  SGR
  MYR
}


model PlanService {
  id           String          @id @default(uuid())
  name         String
  type         PlanType
  showPrice    Boolean         @default(true)
  prices       Price[]
  status       PlanStatus
  options      String
  descriptions String
  benefits     Benefit[]
  category     CategoryService @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  categoryId   String
}

model CategoryService {
  id          String        @id @default(uuid())
  name        String        @unique
  heading     String
  description String
  status      PlanStatus
  plans       PlanService[]
}

model Price {
  id       String      @id @default(uuid())
  curr     Currency
  amount   Float
  discount Float
  plan     PlanService @relation(fields: [idPlan], references: [id], onDelete: Cascade)
  idPlan   String
}

model Benefit {
  id     String      @id @default(uuid())
  value  String
  plan   PlanService @relation(fields: [idPlan], references: [id], onDelete: Cascade)
  idPlan String
}

model Role {
  id          String       @id @default(uuid())
  name        String
  email       String
  password    String
  status      PlanStatus
  secretToken String?
  role        String
  features    Json
}

model Blog {
  id           String               @id @default(uuid())
  title        String
  image        String
  content      String
  status       BlogStatus
  favorite     Boolean
  categories   BlogCategoryPivot[]
}

model BlogCategory {
  id    String               @id @default(uuid())
  name  String               @unique
  blogs BlogCategoryPivot[] 
}

model BlogCategoryPivot {
  id          String       @id @default(uuid())
  blog        Blog         @relation(fields: [blogId], references: [id], onDelete: Cascade)
  blogId      String
  category    BlogCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  categoryId  String
}


model MetaTag {
  id      String @id @default(uuid())
  page    String
  key     String
  value   String
  content String
}

